<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_joystick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.middleland.mybluecar.fragments.JoystickFragment">

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="top" android:orientation="horizontal">

        <TextView android:id="@+id/angleTextView" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="" />
        <TextView android:id="@+id/powerTextView" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="" />
        <TextView android:id="@+id/directionTextView" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="" />
    </LinearLayout>

    <net.middleland.mybluecar.fragments.JoystickView android:id="@+id/joystickView"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_gravity="center" android:layout_weight="1" />

</FrameLayout>
